# Mako notification configuration
# High-quality translucent notifications with auto-dismiss

# Appearance settings
background-color=#1e1e2e88
text-color=#cdd6f4
border-color=#89b4fa
border-size=2
border-radius=8
font=Sans 12

# Position and size
anchor=top-right
margin=10
padding=15
width=350
height=100

# Transparency settings
default-timeout=5000
ignore-timeout=0

# Icon settings
icon-path=/usr/share/icons/Papirus-Dark
icons=1
max-icon-size=48

# Grouping settings
group-by=app-name
max-visible=3

# Interaction settings
on-button-left=dismiss
on-button-right=dismiss-all
on-touch=dismiss

# Progress bar
progress-color=#89b4fa

# Multi-monitor support
output=HDMI-A-1

# Formatting
format=<b>%s</b>\n%b
markup=1